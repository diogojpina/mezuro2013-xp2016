<tr id=<%= "field-#{counter}-option-#{option_counter}" %> style="display: auto;">
  <td><%= text_field_tag("fields[#{counter}][choices][#{option_counter}][name]", name) %></td>
  <td><%= text_field_tag("fields[#{counter}][choices][#{option_counter}][value]", value) %></td>
  <td class='actions'>
    <%= button_without_text :remove, _('Remove'), '#', :class => 'remove-option', :field_id => counter, :option_id => option_counter,  :confirm => _('Are you sure you want to remove this option?') %>
  </td>
</tr>
